<h2 class='center-text'>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='post-form-container'>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'title-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Send reset instructions", class: 'new-post-btn' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
